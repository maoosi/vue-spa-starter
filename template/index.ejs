<!DOCTYPE html>
<html lang="<%= htmlWebpackPlugin.options.iso %>">

<head>
    <!-- Meta properties -->
    <meta charset="utf-8">
    <!-- htmlmin:ignore -->
    <meta name="viewport" content="user-scalable=no, width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, shrink-to-fit=no">
    <!-- htmlmin:ignore -->
    <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1">

    <!-- Title & description -->
    <title><%= htmlWebpackPlugin.options.meta.title %></title>
    <meta name="description" content="<%= htmlWebpackPlugin.options.meta.description %>">

    <% if (htmlWebpackPlugin.options.env.ROBOTS_ALLOWED) { %>
    <!-- Robots -->
    <meta name="robots" content="index, follow">
    <% } else { %>
    <!-- No robots -->
    <meta name="robots" content="noindex, nofollow">
    <% } %>

    <% if (htmlWebpackPlugin.options.env.OPEN_GRAPH) { %>
    <!-- Open Graph -->
    <meta property="og:url" content="<%= htmlWebpackPlugin.options.open_graph.url %>">
    <meta property="og:title" content="<%= htmlWebpackPlugin.options.open_graph.title %>">
    <meta property="og:type" content="website">
    <meta property="og:description" content="<%= htmlWebpackPlugin.options.open_graph.description %>">
    <meta property="og:image" content="<%= htmlWebpackPlugin.options.open_graph.image %>">
    <% } %>

    <% if (htmlWebpackPlugin.options.env.OPEN_GRAPH) { %>
    <!-- Twitter -->
    <meta name="twitter:site" content="<%= htmlWebpackPlugin.options.open_graph.twitter %>">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= htmlWebpackPlugin.options.open_graph.title %>">
    <meta name="twitter:description" content="<%= htmlWebpackPlugin.options.open_graph.description %>">
    <meta name="twitter:image" content="<%= htmlWebpackPlugin.options.open_graph.image %>">
    <% } %>
</head>

<body>

    <!-- Required tag - Content will be injected here -->
    <div id="app"></div>

    <!-- Polyfills -->
    <script src="//cdn.polyfill.io/v2/polyfill.min.js?features=<%= htmlWebpackPlugin.options.intl %>"></script>

</body>

</html>
